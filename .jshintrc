{
    /*
    see: http://www.jshint.com/docs/options/
    */
    "browser": true,
    "devel": true,
    "node": true,
    "esnext": true,
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "immed": true,
    "indent": 2,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "quotmark": "single",
    "regexp": true,
    "undef": true,    
    "unused": "vars",       // only check for variables, not function parameters
    "strict": true,
    "trailing": true,
    "smarttabs": true,
    "white": true,
    "sub": true             // suppresses warnings about using [] notation when it can be expressed in dot notation: person['name'] vs. person.name.
}
